@page
@model IndexModel
@{
    ViewData["ActivePage"] = ManageNavPages.Index;

}


<partial name="_StatusMessage" model="Model.StatusMessage" />

<body class="backgroundImage">

    <form id="profile-form" method="post">
        <div class="border container p-xl-5 w-50 rounded shadow mb-5 bg-white rounded" style="background-color:#dae2e1; ">
            <h2 class="text-info text-center font-weight-bold pb-2">Edit Profile</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-md-4 col-xs-6">
                    <label asp-for="Input.Username" class="col-form-label"></label>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-8">
                    <input asp-for="Input.Username" class="form-control" />
                </div>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4 col-xs-6">
                    <label asp-for="Input.FirstName" class="col-form-label"></label>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-8">
                    <input asp-for="Input.FirstName" class="form-control" />
                </div>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4 col-xs-6">
                    <label asp-for="Input.LastName" class="col-form-label"></label>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-8">
                    <input asp-for="Input.LastName" class="form-control" />
                </div>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4 col-xs-6">
                    <label asp-for="Input.Email" class="col-form-label"></label>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-8">
                    <input asp-for="Input.Email" class="form-control" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4 col-xs-6">
                    <label asp-for="Input.PhoneNumber" class="col-form-label"></label>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-8">
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4 col-xs-6">
                    <label asp-for="Input.StreetAddress" class="col-form-label"></label>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-8">
                    <input asp-for="Input.StreetAddress" class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-md-4 col-xs-6">
                    <label asp-for="Input.City" class="col-form-label"></label>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-8">
                    <input asp-for="Input.City" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4 col-xs-6">
                    <label asp-for="Input.State" class="col-form-label"></label>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-8">
                    <input asp-for="Input.State" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4 col-xs-6">
                    <label asp-for="Input.Postalcode" class="col-form-label"></label>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-8">
                    <input asp-for="Input.Postalcode" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-xs-12 col-sm-6 col-md-8 offset-md-4 offset-sm-6">
                    <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-success" asp-controller="Home" asp-action="Index">Back to Home</a>
                </div>
            </div>
        </div>
    </form>
</body>







@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}