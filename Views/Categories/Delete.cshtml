@model FinalProject.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="backgroundImage">
    <div class="container bg-light text-center"
         style=" margin-top:290px;
                border:2px solid blue;
                width:450px; border-radius:23px;">
        <h1 class="font-weight-bold font-italic" style="color:darkblue">Delete</h1>

        <h3>Are you sure you want to delete this category?</h3>
        <div>
        
            
            <dl class="justify-content-md-center align-content-center">
                @*<p class="col-md-2">
                    @Html.DisplayNameFor(model => model.Name)
                </p>*@
                <p class="text-center font-weight-bold" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">
                    @Html.DisplayFor(model => model.Name)
                </p>
            </dl>

            <form asp-action="Delete" class="d-flex justify-content-between p-5">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> 
               <button style="background-color:darkolivegreen; color:white;"><a asp-action="Index" class="btn btn-block text-white">Back to List</a></button> 
            </form>
        </div>

    </div>
   
    </body>