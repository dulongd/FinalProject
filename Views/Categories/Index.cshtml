@model IEnumerable<FinalProject.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="backgroundImage">     
          <div class="container w-75 rounded p-1">

              @if (User.IsInRole("Admin"))
              {
              <div class="row pt-5 mb-4">
                  <div class="col-md-6">
                      <h2 class="font-weight-bold" style="color:darkslateblue">List of Categories</h2>
                  </div>
                  <div class="col-md-6 text-right">
                      <a asp-area="" asp-controller="Categories" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp;Add new Category</a>

                  </div>                   

              </div>


                      @if (Model.Count() > 0)
                      {
                          <table class="table table-bordered table-hover text-black table-striped shadow-lg p-3 mb-5 bg-white rounded font-weight-bold" background-color:white">

                              <thead>
                                  <tr class="text-center">
                                      <th>
                                          @Html.DisplayNameFor(model => model.Name)
                                      </th>
                                      <th>Action</th>
                                  </tr>
                              </thead>
                              <tbody>
                                  @foreach (var item in Model)
                                  {
                                      <tr>
                                          <td>
                                              @Html.DisplayFor(modelItem => item.Name)
                                          </td>
                                          <partial name="_TableButtonPartialView" model="item.Id" />
                                      </tr>
                                  }
                              </tbody>
                          </table>
                      }
                      else
                      {
                          <p> No category created yet</p>
                      }
                      }
                  </div>
    </body>
