@model IEnumerable<FinalProject.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="backgroundImage">
    <div class="container p-5">

        @if (User.IsInRole("Admin"))
        {
            <div class="row pt-2">
                <div class="col-5">
                    <h2 class="text-info">List of Categories</h2>
                </div>
                <div class="col-6 text-left">
                    <a asp-area="" asp-controller="Categories" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp;Create new Category</a>
                </div>
            </div>


            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped m-3" style="width:60%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>Modify</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <partial name="_TableButtonPartialView" model="item.Id" />
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p> No category created yet</p>
            }
        }
    </div>
    </body>
