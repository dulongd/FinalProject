@model FinalProject.Models.Book
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="backgroundImage">

    <h1 class="text-info text-left pb-4">Edit Book</h1>
    <hr />
    <form method="post" class="ml-4" asp-action="Edit">
        <div class="border backgroundWhite ">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Title" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Title" class="form-control" />
                </div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Author" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Author" class="form-control" />
                </div>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Status" class="col-form-label"></label>

                </div>
                <div class="col-5">
                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<Book.EStatus>()" class="form-control"></select>
                </div>


            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="GenreId" class="col-form-label"></label>

                </div>
                <div class="col-5">
                    <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>

                </div>

            </div>
            <div class="form-group row">
                <div class="col-5 offset-2">
                    <partial name="_EditAndBackTolistButton" />

                </div>

            </div>
        </div>
    </form>
    </body>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
