@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div >
    
    <div id="gallery" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" style="align-self:center">
            <div class="carousel-item active">
                <div class="row">
                    <div class="parent d-flex justify-content-center">
                        <img src="~/Images/NEWS.jpg" alt="Image 1" class="tales" />
                    </div>

                </div>

            </div>

            <div class="carousel-item">
                <div class="row">
                    <div class="parent d-flex justify-content-center">
                        <img src="~/Images/KIDS.jpg" alt="Image 2" class="tales" />
                    </div>

                </div>
            </div>
            <div class="carousel-item">
                <div class="row">
                    <div class="parent d-flex justify-content-center">
                        <img src="~/Images/TESTPREP.jpg" alt="Image 3" class="tales" />
                    </div>

                </div>
            </div>
            <div class="carousel-item">
                <div class="row">
                    <div class="parent d-flex justify-content-center">
                        <img src="~/Images/RESEARCH.jpg" alt="Image 4" class="tales" />
                    </div>

                </div>
            </div>
            <div class="carousel-item">
                <div class="row" top: 50%;>
                    <div class="parent d-flex justify-content-center">
                        <img src="~/Images/MANAGEMENT.jpg" alt="Image 5" class="tales" />
                    </div>

                </div>
            </div>
            <div class="carousel-item">
                <div class="row">
                    <div class="parent d-flex justify-content-center">
                        <img src="~/Images/AUDIOBOOK.jpg" alt="Image 6" class="tales" />
                    </div>

                </div>
            </div>
        </div>

        <a class="carousel-control-prev"  href="#gallery" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#gallery" role="button" data-slide="next">
            <span class="carousel-control-next-icon"  aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>



