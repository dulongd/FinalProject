@model IEnumerable<FinalProject.Models.Genre>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container p-5">
    <div class="row pt-2">
        <div class="col-5">
            <h2 class="text-info">List of Genres</h2>
        </div>
        <div class="col-6 text-left">
            <a asp-area="" asp-controller="Genres" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp;Create new Genre</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {

        <table class="table table-bordered table-striped" style="width:60%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        Modigy
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                   <tr>
                        <td width="50%">@item.Name</td>
                        <partial name="_TableButtonPartialView" model="item.Id" />
                    </tr>





                
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No genre created yet</p>
    }
</div>



