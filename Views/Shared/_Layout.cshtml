<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - FinalProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css" />

</head>
<body class="backgroundImage">
    <header>


        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color:#00529B;">
            <button class="navbar-toggler bg-white text-black-50" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse  d-sm-inline-flex flex-sm-row">
                
                <ul class="navbar-nav flex-md-grow-1">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="navbar-brand text-white font-weight-bold"  style="font-size:40px;font-family:'Agency FB'" asp-area="" asp-controller="Home" asp-action="Index">IT Library</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white font-weight-bold" style="font-size:25px" asp-area="" asp-controller="Books" title="Catalog" asp-action="Index"><i class="fas fa-book-open fa-2x"></i></a>
                         
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white font-weight-bold"  style="font-size:30px" asp-area="" asp-controller="Categories" asp-action="Index">Category</a>

                        </li>
                    }
                    else
                    {

                        <li class="nav-item">
                            <a class="navbar-brand text-white"style="font-size:40px;font-family:'Agency FB'" asp-area="" asp-controller="Home" asp-action="Index">IT Library</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white font-weight-bold" style="font-size:25px" asp-area="" asp-controller="Books" asp-action="Index"><i class="fas fa-book-open fa-2x"></i></a>
                           
                        </li>
                    }

                </ul>

                <form asp-controller="Books" asp-action="SearchByKeyword" class="d-flex w-25">
                    <div class="input-group">
                        <input class="form-control rounded-pill" name="keyword" type="search" placeholder="Search by Keyword" aria-label="Search">
                        <button class=" btn btn-black text-white rounded-circle" type="submit"><i class="fas fa-search"></i></button>
                    </div>
                </form>
                <div class="nav-item">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer" style="background-color: #00529B">
        <div class="text-white ml-5" >
            &copy; 2021 - IT Library
        </div>
       
        
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/6b331c436e.js" crossorigin="anonymous"></script>    
    @*<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css"></script>*@
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.5.2/bootbox.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
