<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title>@ViewData["Title"] - FinalProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:black;">


                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row">
                    <img src="/Images/white_library_logo.png" width="160" height="80" />
                    <ul class="navbar-nav flex-grow-1">


                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="navbar-brand text-white font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">IT Library</a>
                            </li>

                            <li class="nav-item">


                                <a class="nav-link text-white font-weight-bold" asp-area="" asp-controller="Books" asp-action="Index">Catalog</a>

                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white font-weight-bold" asp-area="" asp-controller="Genres" asp-action="Index">Genres</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">



                                <a class="navbar-brand text-white font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">IT Library</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white font-weight-bold" asp-area="" asp-controller="Books" asp-action="Index">Catalog</a>

                            </li>

                        }


                    </ul>

                    <form asp-controller="Books" asp-action="SearchByKeyword" class="d-flex w-25">
                        <input class="form-control p-2 me-2 m-2" name="keyword" type="search" placeholder="Search by Keyword" aria-label="Search">

                        <button class="btn me-2 m-2" style="color:white" type="submit"><i class="fas fa-search"></i></button>

                    </form>


                    <partial name="_LoginPartial" />


                </div>
            
        </nav>
    </header>
    <div style="color:red">@Html.Raw(TempData["ErrorMessage"])</div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container">
            &copy; 2021 - FinalProject
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/6b331c436e.js" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
