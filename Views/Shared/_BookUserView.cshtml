@model IEnumerable<FinalProject.Models.Book>

    <h1>List of books</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    }
                    <th>
                        @Html.DisplayNameFor(model => model.Genre)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <td>

                            <input type="button" id="checkout" class="btn btn-primary text-white"
                                   onclick=checkOut("@item.Id") value="@Enum.Parse(typeof(Book.EStatus), item.Status)" />
                                                    
                        </td>
                    }
                        <td>
                            @Html.DisplayFor(modelItem => item.Genre.Name)
                        </td>
                        <td>
                            <partial name="_DetailView" model="item.Id" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

