@model IEnumerable<FinalProject.Models.Book>






<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info">List of Books</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-area="" asp-controller="Books" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp;Add book</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th>
                        Action
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="20%">@item.Title</td>
                        <td width="20%">@item.Author</td>
                        <td width="20%">
                            @Enum.Parse(typeof(Book.EStatus), item.Status)
                        </td>
                        <td width="20%">
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <partial name="_TableButtonPartialView" model="item.Id" />

                    </tr>
}
            </tbody>
        </table> }
    else
    {
        <p> No book created yet</p>}
</div>

